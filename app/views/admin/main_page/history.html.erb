<%= form_for :history, builder: ActiveAdmin::FormBuilder,
  :url => admin_main_page_history_path, :method => :post  do |f| %>
  <%= params%>
  <% if params["status"] == "true"  %>
    <%= f.inputs "Select option" do %>
      <%= f.input :type, :as => :select, :collection => {:Tests => 1, :Plugins => 2, :Themes => 3}, include_blank: false %>
    <%end%>
    <%= submit_tag "Submit"%>
  <%end%>
<%end%>

<%= form_for :history, builder: ActiveAdmin::FormBuilder,
  :url => root_path, :method => :post  do |f| %>

  <% if params["history"] and params["history"]["type"] == "1" %>
    <%= f.inputs "Select dates" do %>
      <%= f.label "From" %>
      <%= f.date_field :start_date, :class => "datepicker", :placeholder => "date" %>
      <br>
      <%= f.label "To" %>
      <%= f.date_field :end_date, :class => "datepicker", :placeholder => "date" %>
    <%end%>
    <%= submit_tag "Submit"%>
  <% elsif params["history"] and params["history"]["type"] == "2" %>
    <%= f.inputs "Select Plugin" do %>
      <%= f.input :Plugin, :as => :select, :collection => V2::Plugin.all.pluck(:plugin_name), include_blank: false %>
      <%= f.label "From" %>
      <%= f.date_field :start_date, :class => "datepicker", :placeholder => "date" %>
      <br>
      <%= f.label "To" %>
      <%= f.date_field :end_date, :class => "datepicker", :placeholder => "date" %>
    <%end%>
    <%= submit_tag "Submit"%>
  <% elsif params["history"] and params["history"]["type"] == "3" %>
    <%= f.inputs "Select Theme" do %>
      <%= f.input :Theme, :as => :select, :collection => V2::Theme.all.pluck(:theme_name), include_blank: false %>
      <%= f.label "From" %>
      <%= f.date_field :start_date, :class => "datepicker", :placeholder => "date" %>
      <br>
      <%= f.label "To" %>
      <%= f.date_field :end_date, :class => "datepicker", :placeholder => "date" %>
    <%end%>
    <%= submit_tag "Submit"%>
  <% end %>
<%end%>
<% params %>
